#!/usr/bin/env bash
# DANEEL Pre-commit Hook
#
# Runs quality checks before allowing commit.
# Install with: make install-hooks
#
# Checks:
# 1. cargo fmt (formatting)
# 2. cargo clippy (lints)
# 3. cargo test (tests)

set -e

echo "ğŸ” Running pre-commit checks..."

# Check formatting
echo ""
echo "ğŸ“ Checking formatting..."
if ! cargo fmt --all -- --check; then
    echo ""
    echo "âŒ Formatting check failed!"
    echo "   Run 'cargo fmt' to fix formatting issues."
    exit 1
fi
echo "âœ… Formatting OK"

# Run clippy
echo ""
echo "ğŸ“ Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings 2>/dev/null; then
    echo ""
    echo "âŒ Clippy check failed!"
    echo "   Fix the warnings above, or run 'cargo clippy --fix' for auto-fixes."
    exit 1
fi
echo "âœ… Clippy OK"

# Run tests
echo ""
echo "ğŸ§ª Running tests..."
if ! cargo test --all-features 2>/dev/null; then
    echo ""
    echo "âŒ Tests failed!"
    echo "   Fix the failing tests before committing."
    exit 1
fi
echo "âœ… Tests OK"

echo ""
echo "âœ… All pre-commit checks passed!"
